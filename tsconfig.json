{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
      "@common/*" : ["./src/common/*"],
      "@shared/*" : ["./src/shared/*"],
      "@features/*" : ["./src/features/*"],
      "@core/*" :  ["./src/core/*"],
      "@assets/*" : ["./src/assets/*"],
      "@ui" : ["./src/ui"]
		}
  },
  "include": [
    "src",
    "./src/svgFile.d.ts"
  ]
}
